<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.test2.userMapper">
	<!-- crud操作 -->

	<insert id="addUser" parameterType="com.test1.User">
		insert into user (name,age) values (#{name},#{age})<!-- #{name},#{age}来源于对象的属性 -->
	</insert>

	<delete id="deleteUser" parameterType="int">
		delete from user where
		id=#{id}
	</delete>

	<update id="updateUser" parameterType="com.test1.User">
		update user set
		name=#{name},age=#{age} where id=#{id}
	</update>

	<select id="getUser" parameterType="int" resultType="com.test1.User">
		select *
		from user where id=#{id}
	</select>

	<!-- 结果类型如何指定？ -->
	<select id="getAll" resultType="com.test1.User">
		select * from user
	</select>
</mapper>
